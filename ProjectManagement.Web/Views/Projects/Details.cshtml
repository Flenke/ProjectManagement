@model ProjectManagement.Core.Entities.Project

@{
    ViewData["Title"] = "Project Details";
}

<h1>Project Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-3">Project Number</dt>
        <dd class="col-sm-9">@Model.ProjectNumber</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Project Manager</dt>
        <dd class="col-sm-9">@Model.ProjectManager</dd>

        <dt class="col-sm-3">Hourly Rate</dt>
        <dd class="col-sm-9">@Model.HourlyRate.ToString("C")</dd>

        <dt class="col-sm-3">Total Price</dt>
        <dd class="col-sm-9">@Model.TotalPrice.ToString("C")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@(Model.Customer?.Name ?? "N/A")</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>